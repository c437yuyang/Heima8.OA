@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/tableStyle.css" rel="stylesheet" />
    <link href="~/Content/jquery-easyui-1.3.1/themes/icon.css" rel="stylesheet" />
    <link href="~/Content/jquery-easyui-1.3.1/themes/metro/easyui.css" rel="stylesheet" />
    <script src="~/Content/jquery-easyui-1.3.1/jquery-1.8.0.min.js"></script>
    <script src="~/Content/jquery-easyui-1.3.1/jquery.easyui.min.js"></script>
    <script src="~/Content/jquery-easyui-1.3.1/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/MyAjaxForm.js"></script>


    <script type="text/javascript">
        $(function () {
            initTable();
            $("#addDialogDiv").css("display", "none");
            $("#editDialogDiv").css("display", "none");
            //            $("#setRoleDialogDiv").css("display", "none");
            //            $("#setActionDialogDiv").css("display", "none");
            //
            bindSearchBtnClick();
            bindCkbIsMenuClick();
            bindUploadBtnClick(); //绑定上传图片按钮的点击事件
        });


        //绑定上传图片按钮的点击事件
        function bindUploadBtnClick() {
            $("#btnUploadIcon").click(function () {
                $("#addDialogDiv form").ajaxSubmit({
                    url: "/ActionInfo/UploadImage",
                    type:"POST",
                    success: function (data) {
                        $("#hidMenuIcon").val(data);
                        $("#uploadImage").html("<img src='" + data + "' style='width:100px;height:100px;'/>");
                    }
                })
            });
        }

        //为是否是菜单项帮顶点击事件
        function bindCkbIsMenuClick() {
            //$("#ckbIsMenu").val('false');
            $("#MenuIcon").css('display', 'none');
            $("#ckbIsMenu").change(function () {
                //显示或者隐藏所在表格行
                var chk = document.getElementById('ckbIsMenu'); //这里用jquery的选择器不行，不知道为什么
                if (chk.checked) {
                    $('#MenuIcon').show();
                } else {
                    $('#MenuIcon').hide();
                }
            });
        }


        //绑定搜索查询事件
        function bindSearchBtnClick() {
            $("#btnSearch").click(function () {
                var data = { schName: $("#txtSchName").val(), schRemark: $("#txtSchReamrk").val() };
                initTable(data);
            });
        }

        //初始化表格
        function initTable(queryParam) {
            $('#tt').datagrid({
                url: '/ActionInfo/GetAllActionInfos', //rows:一页有多少条，page：请求当前页
                title: '权限信息列表',
                width: 700,
                height: 400,
                fitColumns: true,
                idField: 'ID',
                loadMsg: '正在加载权限的信息...',
                pagination: true,
                singleSelect: false,
                pageSize: 10,
                pageNumber: 1,
                pageList: [10, 20, 30],
                queryParams: queryParam, //让表格在加载数据的时候，额外传输的数据。(就是request里面对应的数据)
                columns: [
                    [
                        { field: 'ck', checkbox: true, align: 'left', width: 50 },
                        { field: 'ID', title: '权限的编号', width: 80 },
                        { field: 'ActionName', title: '权限名', width: 120 },
                        { field: 'Url', title: '权限Url', width: 120 },
                        { field: 'IsMenu', title: '是否菜单', width: 50,
                            formatter: function (value, row, index) {
                                return value?"是":"否";
                            }
                        },
                        {
                            field: 'MenuIcon', title: '图标', width: 120,
                            formatter: function (value, row, index) {
                                return "<img src='"+value+"' width='20px' height='20px'/>";
                            }
                        },

                        { field: 'Remark', title: '备注', width: 120 },
                        {
                            field: 'SubTime',
                            title: '提交时间',
                            width: 120,
                            align: 'right',
                            formatter: function (value, row, index) {
                                return (eval(value.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d h:m:s");
                            }
                        },
                        {
                            field: 'ModfiedOn',
                            title: '操作',
                            width: 120,
                            formatter: function (value, row, index) {
                                var str = "";
                                str += "<a href='javascript:void(0)' class='editLink' uid='" + row.ID + "'>修改</a> &nbsp;&nbsp;";
                                str += "<a href='javascript:void(0)' class='deletLink' uid='" + row.ID + "'>删除</a>";
                                return str;
                            }
                        }
            ]
        ],
            toolbar: [
                {
                    id: 'btnDownShelf',
                    text: '添加',
                    iconCls: 'icon-add',
                    handler: function () {
                        //alert("dd");
                        //弹出一个添加的对话框
                        addClickEvent();
                    }
                }, {
                    id: 'btnDelete',
                    text: '删除',
                    iconCls: 'icon-cancel',
                    handler: function () {
                        deleteEvent();
                    }
                }, {
                    id: 'btnEdit',
                    text: '修改',
                    iconCls: 'icon-edit',
                    handler: function () {
                        //校验你是否只选中一个 权限
                        var selectedRows = $('#tt').datagrid("getSelections");
                        if (selectedRows.length != 1) {
                            //error,question,info,warning.
                            $.messager.alert("错误提醒", "请选中1行要修改数据！", "question");
                            return;
                        }
                        editEvent(selectedRows[0].ID);
                    }
                }, {
                    id: 'btnSetRole',
                    text: '设置角色',
                    iconCls: 'icon-redo',
                    handler: function () {
                        //判断是否选中一个权限进行角色设置。弹出一个设置角色的对话框出来。
                        //                            setRole();
                    }
                }, {
                    id: 'btnSetAction',
                    text: '设置特殊权限',
                    iconCls: 'icon-redo',
                    handler: function () {
                        //判断是否选中一个权限进行角色设置。弹出一个设置角色的对话框出来。
                        //                            setAction();
                    }
                }
            ],
            onHeaderContextMenu: function (e, field) {

            },
            onLoadSuccess: function (data) {
                $(".editLink").click(function () { //
                    editEvent($(this).attr("uid"));
                    return false;
                });
                $(".deletLink").click(function () { //
                    deleteEvent($(this).attr("uid"));
                    return false;
                });
            }
        });
        }

        //TODO:实现增删查改操作后停留在当前页，给inittable传一个参数

        //-------------------------添加部分开始-----------------------------------------
        //当权限点击添加时候，弹出一个添加的对话框
        function addClickEvent() {
            //var datagirdview = $("#tt");
            //for (var key in datagirdview) {
            //    console.log(key + ":" + datagirdview[key]);
            //}
            //alert($("#tt").attr('pageNumber'));

            $("#addDialogDiv").css("display", "block");
            $("#addDialogDiv").dialog({
                title: "添加权限",
                modal: true,
                width: 400,
                height: 400,
                collapsible: true,
                minimizable: true,
                maximizable: true,
                resizable: true,
                buttons: [{
                    id: 'btnOk',
                    text: '添加',
                    iconCls: 'icon-ok',
                    handler: subAddForm
                }, {
                    id: 'btnCancel',
                    text: '取消',
                    iconCls: 'icon-cancel',
                    handler: function () {
                        $("#addDialogDiv").dialog("close");
                    }
                }]
            });
        }


        //把表单提交到后台。
        function subAddForm() {
            $("#addDialogDiv form").submit();
        }

        //添加成功过之后执行的代码
        function afterAdd(data) {
            if (data == "ok") {
                //关闭对话框刷新表格
                $("#addDialogDiv").dialog("close");
                initTable();
            } else {
                $.messager.alert(data);
            }
        }
        //-------------------------添加部分结束-----------------------------------------


        //-------------------------修改部分开始-----------------------------------------

        //修改
        function editEvent(id) {
            $('#tt').datagrid("clearSelections");
            $('#tt').datagrid("selectRecord", id);
            //给editFrame  的src属性做一个赋值
            $("#editFrame").attr("src", "/ActionInfo/Edit/" + id);
            $("#editDialogDiv").css("display", "block");
            $("#editDialogDiv").dialog({
                title: "修改权限",
                modal: true,
                width: 400,
                height: 400,
                collapsible: true,
                minimizable: true,
                maximizable: true,
                resizable: true,
                buttons: [{
                    id: 'btnOk',
                    text: '修改',
                    iconCls: 'icon-ok',
                    handler: function () {
                        $("#editFrame")[0].contentWindow.submitForm();
                    }
                }, {
                    id: 'btnCancel',
                    text: '取消',
                    iconCls: 'icon-cancel',
                    handler: function () {
                        $("#editDialogDiv").dialog("close");
                    }
                }]
            });
        }
        //修改成功之后由子容器来调用的
        function afterEditSuccess() {
            $("#editDialogDiv").dialog("close");
            initTable();
        }
        //-------------------------修改部分结束-----------------------------------------


        //-------------------------删除部分开始-----------------------------------------

        //删除按钮被点击的时候执行。
        function deleteEvent(id) {

            if (id) {
                $('#tt').datagrid("clearSelections");
                $('#tt').datagrid("selectRecord", id);
                deleteIDs(id.toString());
                return false;
            }
            //第一步拿到  easyui里面的选中的项
            var selectedRows = $('#tt').datagrid("getSelections");
            if (selectedRows.length <= 0) {
                //error,question,info,warning.
                $.messager.alert("错误提醒", "请选中删除数据！", "question");
                return false;
            }
            var ids = "";
            // 把数据删除
            for (var key in selectedRows) {
                ids = ids + selectedRows[key].ID + ",";
            }
            //ids:     1,2,       4,5,6,
            ids = ids.substr(0, ids.length - 1);
            deleteIDs(ids);
            return false;
        }

        //此方法传入一个文本值，再post到后台进行删除，例如:"1,2,3" 或者 "1"
        function deleteIDs(ids) {
            var length = ids.split(',').length;

            $.messager.confirm("删除确认", "确定要删除选中的" + length + "条数据吗?", function (isOk) {
                if (!isOk) {
                    return;
                } else {
                    $.post("/ActionInfo/Delete", { ids: ids }, function (data) {
                        if (data == "ok") {
                            //刷新表格
                            initTable();
                            $('#tt').datagrid("clearSelections");
                        } else {
                            $.messager.alert("提醒消息", "败了", "error");
                        }
                    });
                }
            });
        }

        //-------------------------删除部分结束-----------------------------------------


    </script>

</head>
<body>
    <div>

        <div>
            权限名：
            <input type="text" id="txtSchName" name="txtSchName" />
            备注：<input type="text" name="txtSchReamrk" id="txtSchReamrk" />
            <input type="button" id="btnSearch" value="搜索" />
        </div>

        @*当前页面放表格数据的地方*@
        <table id="tt" style="width: 700px;" title="标题，可以使用代码进行初始化，也可以使用这种属性的方式"
            iconcls="icon-edit">
        </table>

        <!----------------弹出来的添加的 对话框- 开始------------>
        <div id="addDialogDiv">
            @using (Ajax.BeginForm("Add", "ActionInfo", new AjaxOptions() { OnSuccess = "afterAdd" }))
            {
                <table class="t2">
                    <tr>
                        <td>权限名：</td>
                        <td>
                            <input type="text" name="ActionName" /></td>
                    </tr>
                    <tr>
                        <td>Url：</td>
                        <td>
                            <input type="text" name="Url" /></td>
                    </tr>

                    <tr>
                        <td>HttpMethd：</td>
                        <td>
                            <select name="HttpMethd">
                                <option value="GET">GET</option>
                                <option value="POST">POST</option>
                            </select>
                        </td>

                    </tr>

                    <tr>
                        <td>是否是菜单项：</td>
                        <td>
                            <input type="checkbox" name="IsMenu" id="ckbIsMenu" value="true" />
                        </td>
                    </tr>
                    <tr id="MenuIcon">
                        <td>菜单的图标地址：</td>
                        <td>
                            <input type="hidden" id="hidMenuIcon" name="MenuIcon" />
                            <input type="file" id="fileMenuIcon" name="fileMenuIcon"/>
                            <input type="button" id="btnUploadIcon" value="上传"/>
                            <div id="uploadImage">


                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>排序：</td>
                        <td>
                            <input type="text" name="Sort" /></td>
                    </tr>
                    <tr>
                        <td>备注：</td>
                        <td>
                            <input type="text" name="Remark" /></td>
                    </tr>


                </table>
            }
        </div>
        <!----------------弹出来的添加的 对话框- 结束------------>

        <!----------------弹出来的修改的 对话框- 开始------------>
        <div id="editDialogDiv">
            <iframe id="editFrame" src="javascript:void(0)" frameborder="0" width="100%" height="100%" scrolling="no"></iframe>
        </div>
        <!----------------弹出来的修改的 对话框- 结束------------>


    </div>
</body>
</html>
